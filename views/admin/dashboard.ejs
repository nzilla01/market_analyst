<table class="admin_table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th> cate</th>
            <th>Date</th>
            <th>Trending</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(article => { %>
            <tr>
                <td><a href="/article/<%= article._id %>"><%= article.title %></a></td>
                <td><%= article.author %></td>
                <td><%= article. category %></td>
                <td><%= new Date(article.date).toDateString() %></td>
                <td>
                    <% if (article.trending) { %>
                        ✅ Yes
                    <% } else { %>
                        ❌ No
                    <% } %>
                </td>
                
                <td>
                    <a href="/edit_post/<%= article._id %>" class="btn">Edit</a>

                    <form action="/delete-post/<%= article._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <input type="submit" value="Delete" class="btn">
                    </form>

                    <form action="/toggle-trending/<%= article._id %>" method="POST" style="display:inline;">
                        <input type="hidden" name="trending" value="<%= !article.trending %>">
                        <button type="submit" class="btn">
                            <%= article.trending ? ' Trending' : ' Trending' %>
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
