<div class="search-term">
  <div class="search">
    <h1 class="author_heading">Search Result</h1>
  </div>

  <section class="article">
    <ul class="post">
      <% if (data && data.length > 0) { %> <!-- Ensure 'data' exists and is not empty -->
        <% data.forEach(article => { %>
          <li>
            <p>
              <a href="/article/<%= article._id %>" class="read-more"><%= article.title %></a>
            </p>
            <span><%= new Date(article.date).toDateString() %></span>
          </li>
        <% }) %>
      <% } else { %>
        <p>No articles found for your search.</p> <!-- Handle empty search results -->
      <% } %>
    </ul>
  </section>
</div>
